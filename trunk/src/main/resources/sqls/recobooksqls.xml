<?xml version="1.0" encoding="utf-8"?>

<sqls name="recobook">


	<sql name="LIST_RECOBOOK_SQL">
		<description>추천책 목록</description>
		<query>
            <![CDATA[
             SELECT book_idNum as BIDNUM
  			   FROM RECOBOOK 
              WHERE MONTHNAME(input_date) = MONTHNAME(now())
            ]]>
		</query>
	</sql>


	<sql name="INSERT_RECOBOOK_SQL">
		<description>추천책 등록</description>
		<query>
            <![CDATA[
            INSERT INTO RECOBOOK (input_date, book_idNum) 
            VALUES(now(), ?)
            ]]>
		</query>
	</sql>


</sqls>